{
	"name": "IMSLP No-Wait",
	"short_name": "IMSLP NW",
	"description": "Removes wait time from imslp.org",
	"version": "1.0.0",

	"permissions": [
		"tabs",
		"activeTab",
		"*://*.imslp.org/*"
	],

	/*"background": {
		"scripts": ["background.js"]
	},*/

	"content_scripts": [
		{
			"matches": ["*://*.imslp.org/*"],
			"js": ["jquery-3.1.1.min.js", "removeWait.js"]
		}
	],

	"browser_action": {
		"default_icon": {
			"16": "icons/16.png",
			"24": "icons/24.png",
			"32": "icons/32.png",
			"48": "icons/48.png",
			"64": "icons/64.png",
			"128": "icons/128.png",
			"256": "icons/256.png",
			"512": "icons/512.png"
		}
	},

	"icons": {
		"16": "icons/16.png",
		"24": "icons/24.png",
		"32": "icons/32.png",
		"48": "icons/48.png",
		"64": "icons/64.png",
		"128": "icons/128.png",
		"256": "icons/256.png",
		"512": "icons/512.png"
	},

	"manifest_version": 2
}